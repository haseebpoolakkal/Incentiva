<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AdminTodayHistory">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/admin_history_today_recycler"
        android:background="@color/white"/>

    <!--    Animation Starts here-->

    <RelativeLayout
        android:id="@+id/admin_today_history_progress_animation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/admin_today_history_card1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shine_background">

            <ImageView
                android:id="@+id/admin_today_history_shine1"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="-20dp"
                android:rotation="30"
                android:src="@drawable/shine" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/admin_today_history_card2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/admin_today_history_card1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shine_background">

            <ImageView
                android:id="@+id/admin_today_history_shine2"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="-20dp"
                android:rotation="30"
                android:src="@drawable/shine" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/admin_today_history_card3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/admin_today_history_card2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shine_background">

            <ImageView
                android:id="@+id/admin_today_history_shine3"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="-20dp"
                android:rotation="30"
                android:src="@drawable/shine" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/admin_today_history_card4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/admin_today_history_card3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shine_background">

            <ImageView
                android:id="@+id/admin_today_history_shine4"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="-20dp"
                android:rotation="30"
                android:src="@drawable/shine" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/admin_today_history_card5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/admin_today_history_card4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shine_background">

            <ImageView
                android:id="@+id/admin_today_history_shine5"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="-20dp"
                android:rotation="30"
                android:src="@drawable/shine" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/admin_today_history_card6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/admin_today_history_card5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shine_background">

            <ImageView
                android:id="@+id/admin_today_history_shine6"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="-20dp"
                android:rotation="30"
                android:src="@drawable/shine" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/admin_today_history_card7"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/admin_today_history_card6"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shine_background">

            <ImageView
                android:id="@+id/admin_today_history_shine7"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="-20dp"
                android:rotation="30"
                android:src="@drawable/shine" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>