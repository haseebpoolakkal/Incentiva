<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorPrimaryDark"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/employee_history_list_r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/employee_history_list_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_primary"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="Silver" />

        <TextView
            android:id="@+id/employee_history_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_primary"
            android:textSize="12dp"
            tools:text="Date" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/employee_history_list_r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/employee_history_list_r1">

        <TextView
            android:id="@+id/employee_history_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/text_color_primary"
            android:textSize="15dp"
            tools:text="Name" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/employee_history_list_r3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/employee_history_list_r2">

        <TextView
            android:id="@+id/employee_history_list_bill_no_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Invoice: "
            android:textColor="@color/text_color_primary"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/employee_history_list_bill_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/employee_history_list_bill_no_text"
            android:textColor="@color/text_color_primary"
            android:textSize="15dp"
            tools:text="Name" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/employee_history_list_r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/employee_history_list_r3">

        <TextView
            android:id="@+id/employee_history_list_inct_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Incentive: "
            android:textColor="@color/text_color_primary"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/employee_history_list_inct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/employee_history_list_inct_text"
            android:textColor="@color/text_color_primary"
            android:textSize="15dp"
            tools:text="Name" />

    </RelativeLayout>


</RelativeLayout>